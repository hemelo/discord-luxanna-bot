{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "rootDir": "./src/",
        "outDir": "./dist/",
        "strict": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "sourceMap": false,
        "baseUrl": "./",
        "paths": {
            "@config": ["./src/config"],
            "@parsers": ["./src/parsers"],
            "@listeners": ["./src/listeners"],
            "@commands": ["./src/commands"],
            "@constants": ["./src/constants"],
            "@types": ["./src/types"],
            "@api": ["./src/api"],
            "@api/*": ["./src/api/*"],
            "@helpers": ["./src/helpers"],
            "@database": ["./src/database"],
            "@database/*": ["./src/database/*"]
        }
    },
    "files": [
        "src/Bot.ts"
    ],
    "include": [
        "./**/*.ts",
        "./**/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}